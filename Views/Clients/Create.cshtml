@model Feedo.Entities.Client

@{
    ViewData["Title"] = "Ajouter un Client";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-success text-white">
            <h2 class="mb-0">Ajouter un Nouveau Client</h2>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Nom" class="form-label font-weight-bold">Nom</label>
                        <input asp-for="Nom" class="form-control" placeholder="Entrez le nom" />
                        <span asp-validation-for="Nom" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="Prenom" class="form-label font-weight-bold">Prénom</label>
                        <input asp-for="Prenom" class="form-control" placeholder="Entrez le prénom" />
                        <span asp-validation-for="Prenom" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="NumeroTelephone" class="form-label font-weight-bold">Numéro de Téléphone</label>
                    <input asp-for="NumeroTelephone" class="form-control" placeholder="Ex: 0600000000" />
                    <span asp-validation-for="NumeroTelephone" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Compte" class="form-label font-weight-bold">Identifiant Compte</label>
                    <input asp-for="Compte" class="form-control" placeholder="Nom d'utilisateur" />
                </div>

                <div class="mb-4">
                    <label asp-for="MotPasse" class="form-label font-weight-bold">Mot de passe</label>
                    <input asp-for="MotPasse" type="password" class="form-control" />
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Retour à la liste
                    </a>
                    <button type="submit" class="btn btn-success px-4">
                        <i class="fas fa-save"></i> Enregistrer le Client
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}