@model IEnumerable<Feedo.Entities.Order>
@{
    Layout = "_PurpleLayout";
    ViewData["Title"] = "Dashboard";
}

<div class="page-header">
  <h3 class="page-title">
    <span class="page-title-icon bg-gradient-primary text-white me-2">
      <i class="mdi mdi-home"></i>
    </span> Dashboard
  </h3>
  <nav aria-label="breadcrumb">
    <ul class="breadcrumb">
      <li class="breadcrumb-item active" aria-current="page">
        <span></span>Overview <i class="mdi mdi-alert-circle-outline icon-sm text-primary align-middle"></i>
      </li>
    </ul>
  </nav>
</div>
<div class="row">
  <div class="col-md-3 stretch-card grid-margin">
    <div class="card bg-gradient-danger card-img-holder text-white">
      <div class="card-body">
        <img src="~/assets/images/dashboard/circle.svg" class="card-img-absolute" alt="circle-image" />
        <h4 class="font-weight-normal mb-3">Active Deliveries <i class="mdi mdi-truck-delivery mdi-24px float-end"></i>
        </h4>
        <h2 class="mb-5">@ViewBag.ActiveDeliveries</h2>
        <h6 class="card-text">Livreurs actuellement sur la route</h6>
      </div>
    </div>
  </div>
  <div class="col-md-3 stretch-card grid-margin">
    <div class="card bg-gradient-info card-img-holder text-white">
      <div class="card-body">
        <img src="~/assets/images/dashboard/circle.svg" class="card-img-absolute" alt="circle-image" />
        <h4 class="font-weight-normal mb-3">Pending Orders <i class="mdi mdi-clock-outline mdi-24px float-end"></i>
        </h4>
        <h2 class="mb-5">@ViewBag.PendingOrders</h2>
        <h6 class="card-text">En attente d'affectation</h6>
      </div>
    </div>
  </div>
  <div class="col-md-3 stretch-card grid-margin">
    <div class="card bg-gradient-success card-img-holder text-white">
      <div class="card-body">
        <img src="~/assets/images/dashboard/circle.svg" class="card-img-absolute" alt="circle-image" />
        <h4 class="font-weight-normal mb-3">Success Rate <i class="mdi mdi-chart-line-variant mdi-24px float-end"></i>
        </h4>
        <h2 class="mb-5">@ViewBag.SuccessRate</h2>
        <h6 class="card-text">Livraisons à l'heure aujourd'hui</h6>
      </div>
    </div>
  </div>
  <div class="col-md-3 stretch-card grid-margin">
    <div class="card bg-gradient-warning card-img-holder text-white">
      <div class="card-body">
        <img src="~/assets/images/dashboard/circle.svg" class="card-img-absolute" alt="circle-image" />
        <h4 class="font-weight-normal mb-3">Daily Revenue <i class="mdi mdi-cash-multiple mdi-24px float-end"></i>
        </h4>
        <h2 class="mb-5">@ViewBag.DailyRevenue</h2>
        <h6 class="card-text">Chiffre d'affaires depuis 00h00</h6>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-7 grid-margin stretch-card">
    <div class="card">
      <div class="card-body">
        <div class="clearfix">
          <h4 class="card-title float-start">Weekly Orders Overview</h4>
          <div id="visit-sale-chart-legend" class="rounded-legend legend-horizontal legend-top-right float-end"></div>
        </div>
        <canvas id="visit-sale-chart" class="mt-4"></canvas>
      </div>
    </div>
  </div>
  <div class="col-md-5 grid-margin stretch-card">
    <div class="card">
      <div class="card-body">
        <h4 class="card-title">Sales by Category</h4>
        <div class="doughnutjs-wrapper d-flex justify-content-center">
          <canvas id="traffic-chart"></canvas>
        </div>
        <div id="traffic-chart-legend" class="rounded-legend legend-vertical legend-bottom-left pt-4"></div>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-12 grid-margin">
    <div class="card">
      <div class="card-body">
        <h4 class="card-title">Live Orders Tracking</h4>
        <div class="table-responsive">
          <table class="table">
            <thead>
              <tr>
                <th> Order ID </th>
                <th> Customer </th>
                <th> Items </th>
                <th> Status </th>
                <th> Actions </th>
              </tr>
            </thead>
            <tbody>
              @if (Model != null && Model.Any())
              {
                  foreach (var order in Model)
                  {
                      <tr>
                        <td> #@order.Id </td>
                        <td>
                          <img src="~/assets/images/faces/face1.jpg" class="me-2" alt="image">
                          @order.Client?.Prenom @order.Client?.Nom
                        </td>
                        <td> 
                            @{
                                var summary = string.Join(", ", order.OrderItems.Select(oi => oi.Product != null ? oi.Product.Name : "Item"));
                                if (summary.Length > 30) summary = summary.Substring(0, 30) + "...";
                            }
                            @summary
                        </td>
                        <td>
                          @switch (order.Status)
                          {
                              case Feedo.Entities.OrderStatus.Pending:
                                  <label class="badge badge-gradient-warning">PENDING</label>
                                  break;
                              case Feedo.Entities.OrderStatus.Confirmed:
                                  <label class="badge badge-gradient-primary">CONFIRMED</label>
                                  break;
                              case Feedo.Entities.OrderStatus.Assigned:
                                  <label class="badge badge-gradient-info">ASSIGNED</label>
                                  break;
                              case Feedo.Entities.OrderStatus.InDelivery:
                                  <label class="badge badge-gradient-info">ON THE WAY</label>
                                  break;
                              case Feedo.Entities.OrderStatus.Delivered:
                                  <label class="badge badge-gradient-success">DELIVERED</label>
                                  break;
                              case Feedo.Entities.OrderStatus.Cancelled:
                                  <label class="badge badge-gradient-danger">CANCELLED</label>
                                  break;
                              default:
                                  <label class="badge badge-gradient-secondary">@order.Status</label>
                                  break;
                          }
                        </td>
                        <td> 
                          @if (order.Livreur != null)
                          {
                              <span>@order.Livreur.Prenom @order.Livreur.Nom</span>
                          }
                          else
                          {
                              <span class="text-muted"><i class="mdi mdi-account-search"></i> Searching...</span>
                          }
                        </td>
                        <td>
                            <form asp-action="DeleteOrder" asp-route-id="@order.Id" method="post" onsubmit="return confirm('Supprimer définitivement cette commande ?');" style="display:inline;">
                                <button type="submit" class="btn btn-danger btn-sm p-2" title="Supprimer">
                                    <i class="mdi mdi-delete"></i>
                                </button>
                            </form>
                        </td>
                      </tr>
                  }
              }
              else
              {
                  <tr>
                      <td colspan="5" class="text-center">No active orders found</td>
                  </tr>
              }
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
