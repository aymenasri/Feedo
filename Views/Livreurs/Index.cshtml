@model IEnumerable<Feedo.Entities.Livreur>
@using Feedo.Shared

@{
    ViewData["Title"] = "Gestion des Livreurs";
    Layout = "~/Views/Shared/_PurpleLayout.cshtml";
}

<div class="page-header">
    <h3 class="page-title">
        <span class="page-title-icon bg-gradient-primary text-white me-2">
            <i class="mdi mdi-motorbike"></i>
        </span> Gestion des Livreurs
    </h3>
    <nav aria-label="breadcrumb">
        <ul class="breadcrumb">
            <li class="breadcrumb-item active" aria-current="page">
                <span></span>Overview <i class="mdi mdi-alert-circle-outline icon-sm text-primary align-middle"></i>
            </li>
        </ul>
    </nav>
</div>

<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div>
                        <h4 class="card-title">Liste des Livreurs</h4>
                        <p class="card-description"> Gérer votre flotte de livreurs </p>
                    </div>
                    <a asp-action="Create" class="btn btn-gradient-primary btn-fw">
                        <i class="mdi mdi-account-plus"></i> Ajouter un Livreur
                    </a>
                </div>

                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success">@TempData["Success"]</div>
                }
                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger">@TempData["Error"]</div>
                }

                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Livreur</th>
                                <th>Véhicule</th>
                                <th>Statut</th>
                                <th>Note</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <img src="~/assets/images/faces/face1.jpg" class="me-2" alt="image">
                                            @item.Prenom @item.Nom
                                        </td>
                                        <td>
                                            @if (item.VehicleType == "Bike")
                                            {
                                                <i class="mdi mdi-bike text-info mdi-24px" title="Vélo"></i>
                                            }
                                            else if (item.VehicleType == "Scooter")
                                            {
                                                <i class="mdi mdi-motorbike text-warning mdi-24px" title="Scooter"></i>
                                            }
                                            else
                                            {
                                                <i class="mdi mdi-car text-primary mdi-24px" title="Voiture"></i>
                                            }
                                            <span class="ms-2">@item.LicensePlate</span>
                                        </td>
                                        <td>
                                            @if (item.Status == LivreurStatus.Available)
                                            {
                                                <label class="badge badge-gradient-success">Disponible</label>
                                            }
                                            else if (item.Status == LivreurStatus.Busy)
                                            {
                                                <label class="badge badge-gradient-warning">En Livraison</label>
                                            }
                                            else
                                            {
                                                <label class="badge badge-gradient-secondary">Hors Ligne</label>
                                            }
                                        </td>
                                        <td>
                                            <div class="text-warning">
                                                @for (int i = 0; i < (int)item.Rating; i++)
                                                {
                                                    <i class="mdi mdi-star"></i>
                                                }
                                                @for (int i = (int)item.Rating; i < 5; i++)
                                                {
                                                    <i class="mdi mdi-star-outline"></i>
                                                }
                                            </div>
                                        </td>
                                        <td>
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-inverse-info btn-icon-text btn-sm">
                                                <i class="mdi mdi-pencil btn-icon-prepend"></i> Modifier
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-inverse-danger btn-icon-text btn-sm">
                                                <i class="mdi mdi-delete btn-icon-prepend"></i> Supprimer
                                            </a>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="5" class="text-center">Aucun livreur trouvé.</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
