@model Feedo.Entities.Livreur

@{
    ViewData["Title"] = "Delete Courier";
    Layout = "_Layout";
}

<div class="container mt-5 text-white">
    <div class="alert alert-danger">
        <h3>Are you sure you want to delete this courier?</h3>
    </div>
    
    <div class="card bg-dark border-secondary mb-4">
        <div class="card-body">
            <h4 class="card-title text-danger">@Model.Prenom @Model.Nom</h4>
            <hr class="border-secondary" />
            <dl class="row">
                <dt class="col-sm-3">Email</dt>
                <dd class="col-sm-9">@Model.Email</dd>

                <dt class="col-sm-3">Phone</dt>
                <dd class="col-sm-9">@Model.NumeroTelephone</dd>

                <dt class="col-sm-3">Vehicle</dt>
                <dd class="col-sm-9">@Model.VehicleType (@Model.LicensePlate)</dd>
                
                <dt class="col-sm-3">Status</dt>
                <dd class="col-sm-9">@Model.Status</dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
    </form>
</div>
