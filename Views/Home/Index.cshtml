        .promo-hero-section {
            min-height: auto;
            margin: 1.5rem auto 3rem auto;
            padding: 2rem;
        }

        .rule-of-thirds-grid {
            grid-template-columns: 1fr;
            min-height: auto;
        }

        .hero-image-container {
            height: 350px;
            order: 1;
        }

        .hero-text-container {
            order: 2;
        }

        .hero-price-container {
            order: 3;
        }

        .hero-text-container h1 {
            font-size: 2rem;
        }

        .hero-price-old {
            font-size: 1.2rem;
        }

