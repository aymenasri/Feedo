        border-radius: 50px;
        padding: 0.85rem 1.5rem;
        font-weight: 600;
        border: none;
        transition: all 0.3s ease;
        font-family: 'Inter', sans-serif;
    }

    .btn-promo-dark:hover {
        background: #3a3a3a;
        transform: translateY(-2px);
    }

    .btn-promo-black {
        background: #000;
        color: #fff;
        border-radius: 50px;
        padding: 0.85rem 2rem;
        font-weight: 700;
        border: none;
