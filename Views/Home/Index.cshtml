            font-size: 2rem;
        }

        .promo-hero-badge {
            font-size: 1.1rem;
            padding: 8px 16px;
        }
    }

    @@media (max-width: 768px) {
        .promo-hero-section {
            margin: 1rem;
            padding: 1.5rem;
        }

