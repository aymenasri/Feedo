        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 1.5rem;
        font-size: 2rem;
    }

    .feature-card h3 {
        color: #dc2626;
        font-weight: bold;
        margin-bottom: 1rem;
    }

    .feature-card p {
        color: #b3b3b3;
        line-height: 1.6;
    }

    /* Responsive */
