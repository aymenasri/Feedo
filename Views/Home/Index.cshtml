@model IEnumerable<Feedo.Entities.Product>
@using Feedo.Shared

@{
    ViewData["Title"] = "Accueil";
}

<style>
    /* Template-Based Custom Styles for Feedo */
    body {
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
        background-color: #111111;
        color: #ffffff;
    }

    /* Custom Cursor */
    .cursor {
        position: fixed;
        width: 20px;
        height: 20px;
        border: 2px solid #dc2626;
        border-radius: 50%;
        left: 0;
        top: 0;
        pointer-events: none;
        transform: translate(-50%, -50%);
        transition: width 0.2s, height 0.2s, background-color 0.2s;
        z-index: 9999;
    }

    .cursor-grow {
        width: 40px;
        height: 40px;
        background-color: rgba(220, 38, 38, 0.3);
    }

    /* Hero Section */
    .hero-section {
        background: linear-gradient(135deg, #dc2626 0%, #991b1b 100%);
        color: white;
        padding: 5rem 0;
        margin: -1rem -15px 3rem -15px;
        position: relative;
        overflow: hidden;
    }

    .hero-section h1 {
        font-size: 3.5rem;
        font-weight: bold;
        margin-bottom: 1.5rem;
        text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
    }

    .hero-section p {
        font-size: 1.25rem;
        margin-bottom: 2rem;
        opacity: 0.95;
    }

    /* Promo Hero Section - CTR Optimized Carousel */
    .promo-hero-section {
        background: linear-gradient(135deg, #0a0a0a 0%, #1a1a1a 100%);
        border-radius: 1.5rem;
        border: 1px solid #2a2a2a;
        position: relative;
        overflow: hidden;
        margin: 2rem auto 5rem auto;
        max-width: 1200px;
        padding: 3rem;
        box-shadow: 0 20px 60px rgba(0,0,0,0.5);
    }

    .carousel-container {
        position: relative;
        overflow: hidden;
        width: 100%;
    }

    .carousel-track {
        display: flex;
        transition: transform 0.6s cubic-bezier(0.4, 0, 0.2, 1);
        width: 100%;
    }

    .carousel-slide {
        min-width: 100%;
        max-width: 100%;
        flex-shrink: 0;
        box-sizing: border-box;
        padding: 0 1rem;
    }

    .rule-of-thirds-grid {
        display: grid;
        grid-template-columns: 1.2fr 1fr;
        gap: 1.5rem;
        align-items: center;
        min-height: 500px;
        width: 100%;
        max-width: 100%;
        box-sizing: border-box;
    }

    /* Glassmorphism Navigation Arrows */
    .carousel-nav {
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        width: 50px;
        height: 50px;
        border-radius: 50%;
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(10px);
        -webkit-backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.2);
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        transition: all 0.3s ease;
        opacity: 0;
        z-index: 100;
        color: white;
        font-size: 1.2rem;
    }

    .promo-hero-section:hover .carousel-nav {
        opacity: 1;
    }

    .carousel-nav:hover {
        background: rgba(255, 255, 255, 0.2);
        transform: translateY(-50%) scale(1.1);
    }

    .carousel-nav.disabled {
        opacity: 0.3 !important;
        cursor: not-allowed;
    }

    .carousel-nav.prev {
        left: 1rem;
    }

    .carousel-nav.next {
        right: 1rem;
    }

    /* Carousel Indicators */
    .carousel-indicators {
        position: absolute;
        bottom: 1.5rem;
        left: 50%;
        transform: translateX(-50%);
        display: flex;
        gap: 0.5rem;
        z-index: 10;
    }

    .carousel-indicator {
        width: 8px;
        height: 8px;
        border-radius: 50%;
        background: rgba(255, 255, 255, 0.3);
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .carousel-indicator.active {
        width: 24px;
        border-radius: 4px;
        background: #dc2626;
    }

    .hero-image-container {
        position: relative;
        border-radius: 0;
        overflow: visible;
        height: 550px;
        width: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .promo-hero-image {
        width: auto;
        height: 100%;
        object-fit: contain;
        display: block;
        filter: brightness(1.1) contrast(1.05);
    }

    .promo-hero-badge {
        position: absolute;
        top: 20px;
        right: 20px;
        background: linear-gradient(135deg, #dc2626 0%, #991b1b 100%);
        color: white;
        padding: 15px 25px;
        border-radius: 12px;
        font-weight: 900;
        text-align: center;
        box-shadow: 0 10px 40px rgba(220, 38, 38, 0.6);
        z-index: 10;
        transform: rotate(-3deg);
        border: 3px solid #fff;
    }
    
    .discount-big {
        font-size: 2.5rem;
        line-height: 1;
        font-weight: 900;
        letter-spacing: -2px;
    }
    
    .discount-text {
        font-size: 0.75rem;
        font-weight: 700;
        letter-spacing: 2px;
        margin-top: -5px;
    }

    .best-seller-badge {
        position: absolute;
        top: 15px;
        left: 15px;
        background: linear-gradient(135deg, #fbbf24 0%, #f59e0b 100%);
        color: #000;
        padding: 8px 20px;
        border-radius: 50px;
        font-weight: 900;
        font-size: 0.85rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        box-shadow: 0 8px 20px rgba(251, 191, 36, 0.4);
        z-index: 10;
        font-family: 'Montserrat', sans-serif;
    }

    .hero-price-inline {
        display: flex;
        align-items: baseline;
        gap: 1.5rem;
        margin-bottom: 2.5rem;
    }

    .hero-price-old {
        color: #6b7280;
        text-decoration: line-through;
        font-size: 1.1rem;
        font-weight: 500;
        font-family: 'Montserrat', sans-serif;
        opacity: 0.7;
    }

    .hero-price-new {
        color: #dc2626;
        font-weight: 900;
        font-size: 3.5rem;
        letter-spacing: -0.03em;
        font-family: 'Montserrat', sans-serif;
        text-shadow: 0 2px 10px rgba(220, 38, 38, 0.3);
    }

    .hero-text-container {
        padding: 2rem;
    }

    .hero-text-container h1 {
        font-size: 3.5rem;
        line-height: 1;
        margin-bottom: 1.5rem;
        font-weight: 400;
        font-family: 'Bebas Neue', sans-serif;
        letter-spacing: 0.02em;
        text-transform: uppercase;
    }

    .hero-text-container p {
        font-size: 1.05rem;
        line-height: 1.7;
        margin-bottom: 2rem;
        color: #d1d5db;
        font-family: 'Inter', sans-serif;
        font-weight: 400;
    }

    .hero-buttons {
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    .text-red {
        color: #dc2626;
    }

    .text-light-gray {
        color: #b3b3b3;
    }

    /* Buttons - CTR Optimized */
    .btn-primary {
        background-color: #1a1a1a;
        color: white;
        border-radius: 50px;
        padding: 0.85rem 2rem;
        font-weight: 600;
        transition: all 0.3s ease;
        border: 2px solid #2a2a2a;
        font-family: 'Inter', sans-serif;
        font-size: 1rem;
    }

    .btn-primary:hover {
        background-color: #2a2a2a;
        transform: translateY(-2px);
        box-shadow: 0 10px 25px rgba(0,0,0,0.3);
        color: white;
    }

    .btn-red {
        background: linear-gradient(135deg, #dc2626 0%, #ea580c 100%);
        color: white;
        border-radius: 50px;
        padding: 1rem 2.5rem;
        font-weight: 700;
        transition: all 0.3s ease;
        border: none;
        font-family: 'Inter', sans-serif;
        font-size: 1.1rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        box-shadow: 0 10px 30px rgba(220, 38, 38, 0.4);
    }

    .btn-red:hover {
        background: linear-gradient(135deg, #b91c1c 0%, #c2410c 100%);
        transform: translateY(-3px);
        box-shadow: 0 15px 40px rgba(220, 38, 38, 0.6);
        color: white;
    }

    /* High Contrast Black & Yellow Cards */
    .black-card {
        background: #1a1a1a;
        border-radius: 25px;
        border: 1px solid #333;
        min-height: 350px;
        transition: all 0.3s ease;
    }

    .black-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 20px 50px rgba(0,0,0,0.5);
    }

    .yellow-card {
        background: linear-gradient(135deg, #dc2626 0%, #991b1b 100%) !important;
        border-radius: 25px;
        border: 2px solid #dc2626;
        min-height: 350px;
        transition: all 0.3s ease;
    }

    .yellow-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 20px 50px rgba(220, 38, 38, 0.5);
    }

    .text-yellow {
        color: #fbbf24;
    }

    .text-light-gray {
        color: #d1d5db;
    }

    .display-1 {
        font-size: 5rem;
        font-weight: 900;
        font-family: 'Bebas Neue', sans-serif;
        letter-spacing: -0.02em;
    }

    .display-4 {
        font-size: 3rem;
        font-weight: 900;
        font-family: 'Bebas Neue', sans-serif;
        line-height: 1;
    }

    .plus-icon {
        position: absolute;
        top: 1.5rem;
        right: 1.5rem;
        background: #000;
        color: #fff;
        width: 3rem;
        height: 3rem;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        font-weight: bold;
        transition: transform 0.3s ease;
    }

    .yellow-card:hover .plus-icon {
        transform: rotate(90deg);
    }

    .btn-promo-red {
        background: linear-gradient(135deg, #dc2626 0%, #ea580c 100%);
        color: white;
        border-radius: 50px;
        padding: 0.85rem 1.5rem;
        font-weight: 700;
        border: none;
        transition: all 0.3s ease;
        font-family: 'Inter', sans-serif;
    }

    .btn-promo-red:hover {
        background: linear-gradient(135deg, #b91c1c 0%, #c2410c 100%);
        transform: translateY(-2px);
        box-shadow: 0 10px 30px rgba(220, 38, 38, 0.5);
    }

    .btn-promo-dark {
        background: #2a2a2a;
        color: white;
        border-radius: 50px;
        padding: 0.85rem 1.5rem;
        font-weight: 600;
        border: none;
        transition: all 0.3s ease;
        font-family: 'Inter', sans-serif;
    }

    .btn-promo-dark:hover {
        background: #3a3a3a;
        transform: translateY(-2px);
    }

    .btn-promo-black {
        background: #000;
        color: #fff;
        border-radius: 50px;
        padding: 0.85rem 2rem;
        font-weight: 700;
        border: none;
        transition: all 0.3s ease;
        font-family: 'Inter', sans-serif;
    }

    .btn-promo-black:hover {
        background: #1a1a1a;
        transform: scale(1.05);
    }

    .follow-link {
        transition: all 0.3s ease;
    }

    .follow-link:hover {
        transform: translateX(5px);
    }

    .follow-link i {
        transition: transform 0.3s ease;
    }

    .follow-link:hover i {
        transform: translateX(5px);
    }

    /* Promo Cards */
    .promo-card {
        background: #1a1a1a;
        border-radius: 1.5rem;
        border: 1px solid #333;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        transform-style: preserve-3d;
        overflow: hidden;
    }

    .promo-card:hover {
        box-shadow: 0 20px 40px rgba(220, 38, 38, 0.3);
    }

    .promo-card-image {
        position: relative;
        width: 100%;
        height: 250px;
        background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
    }

    .promo-card-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .promo-card-badge {
        position: absolute;
        top: 15px;
        right: 15px;
        background: linear-gradient(135deg, #dc2626 0%, #991b1b 100%);
        color: white;
        padding: 10px 20px;
        border-radius: 50px;
        font-weight: bold;
        font-size: 1.2rem;
        box-shadow: 0 5px 15px rgba(220, 38, 38, 0.5);
    }

    .promo-price-display {
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    .price-old {
        color: #6b7280;
        text-decoration: line-through;
        font-size: 1rem;
    }

    .price-new {
        color: #dc2626;
        font-weight: bold;
        font-size: 1.8rem;
    }

    /* Features Section */
    .features-section {
        padding: 3rem 0;
    }

    .feature-card {
        background: #1a1a1a;
        border-radius: 15px;
        padding: 2rem;
        box-shadow: 0 5px 15px rgba(0,0,0,0.3);
        transition: all 0.3s ease;
        height: 100%;
        border: 1px solid #333;
    }

    .feature-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 15px 30px rgba(220, 38, 38, 0.3);
        border-color: #dc2626;
    }

    .feature-icon {
        width: 70px;
        height: 70px;
        background: linear-gradient(135deg, #dc2626 0%, #991b1b 100%);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 1.5rem;
        font-size: 2rem;
    }

    .feature-card h3 {
        color: #dc2626;
        font-weight: bold;
        margin-bottom: 1rem;
    }

    .feature-card p {
        color: #b3b3b3;
        line-height: 1.6;
    }

    /* Responsive */
    @@media (max-width: 992px) {
        .promo-hero-section {
            min-height: auto;
            margin: 1.5rem auto 3rem auto;
            padding: 2rem;
        }

        .rule-of-thirds-grid {
            grid-template-columns: 1fr;
            min-height: auto;
        }

        .hero-image-container {
            height: 350px;
            order: 1;
        }

        .hero-text-container {
            order: 2;
        }

        .hero-price-container {
            order: 3;
        }

        .hero-text-container h1 {
            font-size: 2rem;
        }

        .hero-price-old {
            font-size: 1.2rem;
        }

        .hero-price-new {
            font-size: 2rem;
        }

        .promo-hero-badge {
            font-size: 1.1rem;
            padding: 8px 16px;
        }
    }

    @@media (max-width: 768px) {
        .promo-hero-section {
            margin: 1rem;
            padding: 1.5rem;
        }

        .hero-image-container {
            height: 250px;
        }

        .hero-text-container h1 {
            font-size: 1.75rem;
        }

        .hero-text-container p {
            font-size: 0.9rem;
        }

        .hero-buttons {
            flex-direction: column;
            width: 100%;
        }

        .hero-buttons button {
            width: 100%;
        }

        .promo-card-image {
            height: 200px;
        }

        .promo-hero-badge {
            font-size: 1rem;
            padding: 6px 12px;
            top: 10px;
            right: 10px;
        }

        .hero-price-container {
            padding: 1rem;
        }

        .hero-price-old {
            font-size: 1rem;
        }

        .hero-price-new {
            font-size: 1.5rem;
        }
    }
        .hero-price-new {
            font-size: 1.5rem;
        }
    }

    /* --- PREMIUM UX/UI SECTIONS STYLES --- */

    .section-title-premium {
        font-family: 'Bebas Neue', sans-serif;
        font-size: 3.5rem;
        text-align: center;
        margin-bottom: 3rem;
        position: relative;
        display: inline-block;
        left: 50%;
        transform: translateX(-50%);
    }
    .section-title-premium::after {
        content: '';
        display: block;
        width: 60px;
        height: 4px;
        background: #dc2626;
        margin: 0.5rem auto 0;
        border-radius: 2px;
    }

    /* How It Works - Black Contrast */
    .steps-section {
        padding: 6rem 0;
        background: #000000;
        position: relative;
        z-index: 1;
    }
    .step-card {
        text-align: center;
        padding: 2rem;
    }
    .step-icon-wrapper {
        width: 90px;
        height: 90px;
        background: linear-gradient(135deg, rgba(255,255,255,0.05) 0%, rgba(255,255,255,0.01) 100%);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 1.5rem;
        transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    }
    .step-card:hover .step-icon-wrapper {
        background: rgba(220, 38, 38, 0.15);
        border-color: #dc2626;
        transform: scale(1.1) rotate(5deg);
        box-shadow: 0 0 30px rgba(220, 38, 38, 0.2);
    }
    .step-icon {
        font-size: 2.2rem;
        color: #e5e5e5;
    }
    .step-title {
        font-family: 'Bebas Neue', sans-serif;
        font-size: 2rem;
        margin-bottom: 0.75rem;
        letter-spacing: 1px;
    }
    .step-desc {
        color: #9ca3af;
        font-size: 1rem;
        line-height: 1.6;
    }

    /* Mobile App Section - Radiant Depth & Broken Grid */
    .app-section {
        background: radial-gradient(circle at 30% 50%, #2a0a0a 0%, #000000 70%);
        padding: 8rem 0;
        border-top: 1px solid #1a1a1a;
        border-bottom: 1px solid #1a1a1a;
        overflow: visible; /* Essential for Break the Grid */
        position: relative;
        z-index: 2;
    }
    .app-content {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 5rem;
    }
    .app-visual {
        flex: 1;
        position: relative;
        z-index: 10;
        display: flex;
        justify-content: center;
    }
    .app-visual img {
        width: 130%;
        max-width: 750px;
        margin-top: -80px; /* Break grid top */
        margin-bottom: -80px; /* Break grid bottom */
        transform: rotate(-8deg);
        filter: drop-shadow(0 30px 60px rgba(0,0,0,0.7));
        transition: transform 0.6s cubic-bezier(0.23, 1, 0.32, 1);
    }
    .app-visual:hover img {
        transform: rotate(-2deg) scale(1.05);
    }
    .app-text {
        flex: 1;
    }
    .app-title {
        font-family: 'Bebas Neue', sans-serif;
        font-size: 4.5rem;
        line-height: 0.9;
        margin-bottom: 1.5rem;
        text-shadow: 0 10px 30px rgba(0,0,0,0.5);
    }
    .app-buttons {
        display: flex;
        gap: 1.2rem;
        margin-top: 2.5rem;
    }
    .btn-store {
        background: rgba(255,255,255,0.05);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255,255,255,0.1);
        border-radius: 14px;
        padding: 1rem 1.8rem;
        display: flex;
        align-items: center;
        gap: 1rem;
        color: white;
        text-decoration: none;
        transition: all 0.3s ease;
    }
    .btn-store:hover {
        background: #fff;
        color: #000;
        transform: translateY(-4px);
        box-shadow: 0 10px 20px rgba(255,255,255,0.1);
        border-color: #fff;
    }
    .store-icon {
        font-size: 2.2rem;
    }
    .store-text small {
        display: block;
        font-size: 0.75rem;
        opacity: 0.8;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }
    .store-text span {
        font-weight: 800;
        font-size: 1.2rem;
    }

    /* Testimonials - Human & Glow */
    .testimonials-section {
        padding: 8rem 0 6rem;
        background: #050505;
        position: relative;
        z-index: 1;
    }
    .testimonial-card {
        background: #111;
        border: 1px solid #222;
        padding: 2.5rem;
        border-radius: 24px;
        height: 100%;
        transition: all 0.4s ease;
        position: relative;
        overflow: hidden;
    }
    .testimonial-card::before {
        content: '"';
        position: absolute;
        top: 10px;
        right: 20px;
        font-family: 'Bebas Neue', sans-serif;
        font-size: 8rem;
        color: rgba(255,255,255,0.03);
        line-height: 1;
    }
    .testimonial-card:hover {
        border-color: #dc2626;
        box-shadow: 0 15px 40px rgba(220, 38, 38, 0.15);
        transform: translateY(-8px);
        background: #161616;
    }
    .stars {
        color: #FFC107;
        margin-bottom: 1.5rem;
        font-size: 1.2rem;
        text-shadow: 0 0 12px rgba(255, 193, 7, 0.6); /* Glowing Stars */
    }
    .testimonial-text {
        font-style: italic;
        color: #e5e5e5;
        font-weight: 300;
        line-height: 1.7;
        margin-bottom: 2rem;
        font-size: 1.05rem;
    }
    .client-info {
        display: flex;
        align-items: center;
        gap: 1rem;
        border-top: 1px solid #222;
        padding-top: 1.5rem;
    }
    .client-avatar {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        object-fit: cover;
        border: 2px solid #333;
        transition: border-color 0.3s;
    }
    .testimonial-card:hover .client-avatar {
        border-color: #dc2626;
    }
    .client-name {
        font-weight: 700;
        font-size: 1rem;
        color: #fff;
    }

    /* Newsletter Footer */
    .newsletter-section {
        background: linear-gradient(135deg, #111 0%, #080808 100%);
        padding: 6rem 0;
        border-top: 1px solid #222;
        text-align: center;
    }
    .newsletter-container {
        max-width: 650px;
        margin: 0 auto;
    }
    .newsletter-title {
        font-family: 'Bebas Neue', sans-serif;
        font-size: 3.5rem;
        margin-bottom: 1rem;
        letter-spacing: 1px;
    }
    .newsletter-form {
        position: relative;
