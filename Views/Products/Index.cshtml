@model IEnumerable<Feedo.Entities.Product>

@{
    ViewData["Title"] = ViewData["FilterTitle"] ?? "Product Catalog";
    Layout = "~/Views/Shared/_PurpleLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <a asp-action="Categories" class="btn btn-outline-secondary btn-sm">
            <i class="mdi mdi-arrow-left"></i> Back to Collections
        </a>
        <h1 class="display-6 d-inline ms-3">@ViewData["FilterTitle"]</h1>
    </div>
    <a asp-action="Create" class="btn btn-gradient-primary shadow-sm">
        <i class="bi bi-plus-circle"></i> Add New Product
    </a>
</div>

<div class="row">
    @if (Model != null && Model.Any())
    {
        foreach (var item in Model)
        {
            <div class="col-md-4 col-lg-3 mb-4">
                <div class="card h-100 shadow-sm border-0">
                    <img src="@(string.IsNullOrEmpty(item.ImageUrl) ? "/images/no-image.png" : item.ImageUrl)"
                         class="card-img-top" alt="@item.Name"
                         style="height: 180px; object-fit: cover;">

                    <div class="card-body d-flex flex-column">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <h5 class="card-title mb-0">@item.Name</h5>
                            <span class="badge bg-success text-white">@item.Price.ToString("F2") €</span>
                        </div>

                        <p class="card-text text-muted small flex-grow-1">
                            @item.Description
                        </p>

                        <div class="mt-3 pt-3 border-top d-flex justify-content-between align-items-center">
                            @if (item.IsAvailable)
                            {
                                <span class="badge bg-info-subtle text-info border border-info-subtle px-2">Available</span>
                            }
                            else
                            {
                                <span class="badge bg-danger-subtle text-danger border border-danger-subtle px-2">Out of stock</span>
                            }

                            <div class="btn-group">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Edit</a>
                                <form asp-action="Delete" asp-route-id="@item.Id" method="post" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this product?');">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="col-12 text-center py-5">
            <div class="alert alert-light border shadow-sm">
                <p class="mb-0 text-muted">No products found in the database. Start by adding one!</p>
            </div>
        </div>
    }
</div>