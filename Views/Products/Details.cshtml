@model Feedo.Entities.Product

@{
    ViewData["Title"] = Model.Name;
}

<style>
    body {
        background-color: #111;
        color: #fff;
        font-family: 'Inter', sans-serif;
    }

    .product-details-container {
        padding-top: 4rem;
        padding-bottom: 4rem;
        overflow-x: hidden;
    }

    /* Hero Image with Floating Effect */
    .product-hero-image-wrapper {
        position: relative;
        height: 500px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .product-hero-image {
        max-width: 80%;
        max-height: 100%;
        object-fit: contain;
        filter: drop-shadow(0 20px 50px rgba(0,0,0,0.5));
        animation: float 6s ease-in-out infinite;
        z-index: 2;
    }

    /* Floating Animation */
    @@keyframes float {
        0% { transform: translateY(0px) rotate(0deg); }
        50% { transform: translateY(-20px) rotate(2deg); }
        100% { transform: translateY(0px) rotate(0deg); }
    }

    /* Background Glow behind image */
    .hero-glow {
        position: absolute;
        width: 300px;
        height: 300px;
        background: radial-gradient(circle, rgba(220, 38, 38, 0.4) 0%, rgba(0,0,0,0) 70%);
        border-radius: 50%;
        z-index: 1;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
    }

    /* Typography */
    .product-title {
        font-family: 'Montserrat', sans-serif;
        font-weight: 800; /* ExtraBold */
        font-size: 3.5rem;
        line-height: 1.1;
        margin-bottom: 1rem;
        background: linear-gradient(135deg, #dc2626 0%, #f87171 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        letter-spacing: -1px;
        text-shadow: 0 10px 30px rgba(220, 38, 38, 0.3);
    }

    .product-description {
        font-size: 1.1rem;
        line-height: 1.8;
        color: #d1d5db;
        margin-bottom: 2rem;
        font-weight: 300;
    }

    /* Badges */
    .badge-container {
        display: flex;
        gap: 1rem;
        margin-bottom: 1.5rem;
    }

    .badge-premium {
        padding: 0.5rem 1rem;
        border-radius: 50px;
        font-weight: 700;
        font-size: 0.8rem;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .badge-new {
        background: rgba(220, 38, 38, 0.2);
        color: #ef4444;
        border: 1px solid #ef4444;
    }

    .badge-bestseller { /* Assuming Best Seller logic or static for now */
        background: linear-gradient(135deg, #fbbf24 0%, #f59e0b 100%);
        color: #111;
        box-shadow: 0 4px 15px rgba(251, 191, 36, 0.4);
    }

    /* Price Section */
    .price-container {
        margin-bottom: 2rem;
        display: flex;
        align-items: baseline;
        gap: 1.5rem;
    }

    .price-final {
        font-family: 'Montserrat', sans-serif;
        font-size: 4rem;
        font-weight: 900;
        color: white;
        text-shadow: 0 0 20px rgba(220, 38, 38, 0.6); /* Red Glow */
    }

    .price-original {
        font-size: 1.5rem;
        text-decoration: line-through;
        color: #6b7280;
        font-weight: 500;
    }

    /* Interaction & Conversion */
    .controls-container {
        background: rgba(255, 255, 255, 0.05);
        border-radius: 20px;
        padding: 2rem;
        border: 1px solid rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(10px);
    }

    .quantity-selector {
        display: flex;
        align-items: center;
        gap: 1rem;
        margin-bottom: 1.5rem;
    }

    .qty-btn {
        width: 40px;
        height: 40px;
        border-radius: 12px;
        background: #333;
        color: white;
        border: none;
        font-size: 1.2rem;
        cursor: pointer;
        transition: all 0.2s;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .qty-btn:hover {
        background: #444;
    }

    .qty-input {
        background: transparent;
        border: none;
        color: white;
        font-size: 1.5rem;
        font-weight: bold;
        width: 50px;
        text-align: center;
    }

    .extras-section {
        margin-bottom: 2rem;
    }

    .extra-tag {
        display: inline-block;
        padding: 0.5rem 1rem;
        background: rgba(255, 255, 255, 0.1);
        border-radius: 8px;
        border: 1px solid transparent;
        margin-right: 0.5rem;
        font-size: 0.9rem;
        cursor: pointer;
        transition: all 0.3s;
        color: #ccc;
    }

    .extra-tag:hover, .extra-tag.active {
        border-color: #dc2626;
        color: white;
        background: rgba(220, 38, 38, 0.1);
    }

    .btn-commander {
        width: 100%;
        padding: 1.5rem;
        border-radius: 15px;
        background: linear-gradient(135deg, #dc2626 0%, #ea580c 100%);
        color: white;
        font-family: 'Montserrat', sans-serif;
        font-weight: 900;
        font-size: 1.5rem;
        text-transform: uppercase;
        border: none;
        letter-spacing: 2px;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        box-shadow: 0 10px 30px rgba(220, 38, 38, 0.4);
        position: relative;
        overflow: hidden;
    }

    .btn-commander:hover {
        transform: translateY(-5px);
        box-shadow: 0 20px 50px rgba(220, 38, 38, 0.6);
        background: linear-gradient(135deg, #b91c1c 0%, #c2410c 100%);
    }

    .btn-commander::after {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
        transition: 0.5s;
    }

    .btn-commander:hover::after {
        left: 100%;
    }

    .back-link {
        color: #9ca3af;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        margin-bottom: 2rem;
        font-weight: 500;
        transition: color 0.3s;
    }

    .back-link:hover {
        color: white;
    }
</style>

<div class="product-details-container container">
    <a asp-controller="Home" asp-action="Catalog" class="back-link">
        <i class="mdi mdi-arrow-left"></i> Retour au Catalogue
    </a>

    <div class="row align-items-center">
        <!-- Visual Column -->
        <div class="col-lg-6 mb-5 mb-lg-0">
            <div class="product-hero-image-wrapper">
                <div class="hero-glow"></div>
                <img src="@(string.IsNullOrEmpty(Model.ImageUrl) ? "/images/no-image.png" : Model.ImageUrl)" 
                     alt="@Model.Name" 
                     class="product-hero-image animate-float">
            </div>
        </div>

        <!-- Info Column -->
        <div class="col-lg-6">
            <div class="ps-lg-5">
                <div class="badge-container">
                    @if (Model.DiscountPercentage > 0)
                    {
                        <span class="badge-premium badge-bestseller">PROMO -@Model.DiscountPercentage%</span>
                    }
                    <span class="badge-premium badge-new">NEW ARRIVAL</span>
                </div>

                <h1 class="product-title">@Model.Name</h1>
                
                <p class="product-description">
                    @Model.Description
                    <br><br>
                    Une exp√©rience culinaire d'exception, pr√©par√©e avec des ingr√©dients frais s√©lectionn√©s par nos chefs. 
                    Laissez-vous tenter par ce d√©lice qui ravira vos papilles.
                </p>

                <div class="price-container">
                     @if (Model.OldPrice.HasValue)
                     {
                         <span class="price-original">‚Ç¨@Model.OldPrice.Value.ToString("F2")</span>
                     }
                    <span class="price-final">‚Ç¨@Model.Price.ToString("F2")</span>
                </div>

                <!-- Conversion Block -->
                <div class="controls-container">
                    
                    <div class="extras-section">
                        <label class="d-block mb-2 text-white-50 small text-uppercase fw-bold">Suppl√©ments recommand√©s</label>
                        <span class="extra-tag">üßÄ Extra Cheese (+1‚Ç¨)</span>
                        <span class="extra-tag">ü•§ Boisson XL (+2‚Ç¨)</span>
                        <span class="extra-tag">ü•ì Bacon Crispy (+1.5‚Ç¨)</span>
                    </div>

                    <div class="d-flex gap-4 align-items-end">
                        <div class="flex-grow-0">
                             <label class="d-block mb-2 text-white-50 small text-uppercase fw-bold">Quantit√©</label>
                            <div class="quantity-selector">
                                <button class="qty-btn" onclick="decrementQty()">-</button>
                                <input type="number" id="qtyInput" class="qty-input" value="1" min="1" readonly>
                                <button class="qty-btn" onclick="incrementQty()">+</button>
                            </div>
                        </div>
                        <div class="flex-grow-1">
                            <button class="btn-commander" onclick="addToCart(@Model.Id)">
                                COMMANDER <i class="mdi mdi-cart-arrow-right ms-2"></i>
                            </button>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

<script>
    function incrementQty() {
        var input = document.getElementById('qtyInput');
        input.value = parseInt(input.value) + 1;
    }

    function decrementQty() {
        var input = document.getElementById('qtyInput');
        if (parseInt(input.value) > 1) {
            input.value = parseInt(input.value) - 1;
        }
    }

    // Interactive Tags
    document.querySelectorAll('.extra-tag').forEach(tag => {
        tag.addEventListener('click', function() {
            this.classList.toggle('active');
        });
    });

    // Add To Cart Functionality
    function addToCart(productId) {
        const btn = document.querySelector('.btn-commander');
        const originalText = btn.innerHTML;
        
        // Get Quantity
        const qtyInput = document.getElementById('qtyInput');
        const quantity = parseInt(qtyInput.value) || 1;

        // Get Extras
        const extras = [];
        document.querySelectorAll('.extra-tag.active').forEach(tag => {
            // Extract text without price, e.g., "Extra Cheese (+1‚Ç¨)" -> "Extra Cheese"
            // For now, let's just send the whole text to match controller logic
            extras.push(tag.innerText.trim());
        });

        // Loading State
        btn.innerHTML = '<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> Ajout...';
        btn.disabled = true;
        
        const formData = new FormData();
        formData.append('productId', productId);
        formData.append('quantity', quantity);
        
        extras.forEach((extra, index) => {
             formData.append(`extras[${index}]`, extra);
        });

        fetch('/Cart/AddToCart', {
            method: 'POST',
            body: formData
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                // Show Success Notification briefly
                showNotification();
                
                // REDIRECT TO CART (User Request)
                setTimeout(() => {
                    window.location.href = '/Cart';
                }, 800);
            } else {
                alert('Erreur lors de l\'ajout au panier');
                btn.innerHTML = originalText;
                btn.disabled = false;
            }
        })
        .catch(error => {
            console.error('Error:', error);
            alert('Une erreur est survenue');
            btn.innerHTML = originalText;
            btn.disabled = false;
        });
    }

    function showNotification() {
        // Create notification element
        const notification = document.createElement('div');
        notification.className = 'cart-notification';
        notification.innerHTML = `
            <div class="d-flex align-items-center gap-3">
                <div class="check-icon"><i class="mdi mdi-check"></i></div>
                <div>
                    <h5 class="mb-0 fw-bold">Ajout√© au panier !</h5>
                    <small>Votre produit est pr√™t.</small>
                </div>
            </div>
        `;

        document.body.appendChild(notification);

        // Animate In
        setTimeout(() => notification.classList.add('show'), 100);

        // Remove after 3s
        setTimeout(() => {
            notification.classList.remove('show');
            setTimeout(() => notification.remove(), 500);
        }, 3000);
    }
</script>

<style>
    /* Toast Notification Style */
    .cart-notification {
        position: fixed;
        bottom: 30px;
        right: 30px;
        background: rgba(20, 20, 20, 0.95);
        color: white;
        padding: 1.5rem;
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.5);
        border: 1px solid rgba(255,255,255,0.1);
        transform: translateY(100px); /* Start hidden */
        opacity: 0;
        transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        z-index: 9999;
        display: flex;
        align-items: center;
        min-width: 300px;
    }

    .cart-notification.show {
        transform: translateY(0);
        opacity: 1;
    }

    .check-icon {
        width: 40px;
        height: 40px;
        background: #22c55e;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        box-shadow: 0 0 15px rgba(34, 197, 94, 0.4);
    }
</style>
