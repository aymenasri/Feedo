@model Feedo.Entities.Product
@using Feedo.Shared

@{
    ViewData["Title"] = "Edit Product";
    Layout = "~/Views/Shared/_PurpleLayout.cshtml";
}

<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">@ViewData["Title"]</h4>
                <p class="card-description"> Update product details </p>
                <form class="forms-sample" asp-action="Edit" asp-route-id="@Model.Id" method="post" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="CreationA" />
                    <!-- Preserve existing ImageUrl if not updated -->
                    <input type="hidden" asp-for="ImageUrl" /> 

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    
                    <div class="form-group">
                        <label asp-for="Name">Product Name</label>
                        <input asp-for="Name" class="form-control" placeholder="Enter product name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Description">Description</label>
                        <textarea asp-for="Description" class="form-control" rows="4" placeholder="Enter product description"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 form-group">
                            <label asp-for="Price">Current Price (â‚¬)</label>
                            <input asp-for="Price" type="number" step="0.01" class="form-control" placeholder="0.00" required />
                            <small class="text-muted">This is the price customers will pay</small>
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 form-group">
                            <label asp-for="DiscountPercentage">Discount (%)</label>
                            <input asp-for="DiscountPercentage" type="number" step="0.01" min="0" max="100" class="form-control" placeholder="0" />
                            <small class="text-muted">Leave empty for no discount</small>
                            <span asp-validation-for="DiscountPercentage" class="text-danger"></span>
                        </div>
                    </div>
                    
                    <div class="alert alert-info" role="alert">
                        <i class="mdi mdi-information"></i>
                        <strong>Pricing Info:</strong> Old Price is automatically calculated based on the Discount %.
                    </div>

                    <div class="form-group">
                        <label>Main Image</label>
                        @if (!string.IsNullOrEmpty(Model.ImageUrl))
                        {
                            <div class="mb-2">
                                <img src="@Model.ImageUrl" alt="Current Product Image" class="img-thumbnail" style="max-height: 150px;" />
                                <span class="d-block text-muted small">Current Image</span>
                            </div>
                        }
                        <input type="file" name="imageFile" class="form-control" accept="image/*">
                        <small class="form-text text-muted">Upload a new image to replace the current one.</small>
                    </div>

                    <div class="form-group">
                        <label asp-for="DisplayLocation">Display Location</label>
                        <select asp-for="DisplayLocation" class="form-control" asp-items="Html.GetEnumSelectList<ProductDisplayLocation>()"></select>
                        <span asp-validation-for="DisplayLocation" class="text-danger"></span>
                    </div>

                    <div class="form-check form-check-flat form-check-primary">
                        <label class="form-check-label">
                            <input type="checkbox" asp-for="IsAvailable" class="form-check-input"> Is Available
                        </label>
                    </div>

                    <button type="submit" class="btn btn-gradient-primary me-2">Save Changes</button>
                    <a asp-action="Index" class="btn btn-light">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>
