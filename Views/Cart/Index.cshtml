@model Feedo.Models.ShoppingCart

@{
    ViewData["Title"] = "Shopping Cart";
    Layout = "_Layout";
}

<style>
    body {
        background-color: #0a0a0a;
        color: #ffffff;
    }

    .cart-container {
        max-width: 1200px;
        margin: 100px auto 50px;
        padding: 0 20px;
    }

    .cart-header {
        text-align: center;
        margin-bottom: 50px;
    }

    .cart-header h1 {
        font-size: 3rem;
        font-weight: 900;
        background: linear-gradient(135deg, #ffffff 0%, #dc2626 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        margin-bottom: 1rem;
    }

    .cart-item {
        background: linear-gradient(135deg, #1a1a1a 0%, #0f0f0f 100%);
        border-radius: 15px;
        padding: 20px;
        margin-bottom: 15px;
        display: flex;
        align-items: center;
        gap: 20px;
        border: 1px solid rgba(255, 255, 255, 0.05);
        transition: all 0.3s ease;
    }

    .cart-item:hover {
        border-color: rgba(220, 38, 38, 0.5);
        transform: translateX(5px);
    }

    .cart-item-image {
        width: 100px;
        height: 100px;
        border-radius: 10px;
        object-fit: cover;
    }

    .cart-item-info {
        flex: 1;
    }

    .cart-item-name {
        font-size: 1.25rem;
        font-weight: 700;
        margin-bottom: 0.5rem;
    }

    .cart-item-price {
        color: #dc2626;
        font-weight: 600;
    }

    .quantity-controls {
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .qty-btn {
        background: #dc2626;
        color: white;
        border: none;
        width: 35px;
        height: 35px;
        border-radius: 50%;
        cursor: pointer;
        font-size: 1.2rem;
        transition: all 0.3s ease;
    }

    .qty-btn:hover {
        background: #991b1b;
        transform: scale(1.1);
    }

    .qty-display {
        font-size: 1.25rem;
        font-weight: 700;
        min-width: 40px;
        text-align: center;
    }

    .remove-btn {
        background: transparent;
        border: 2px solid #ef4444;
        color: #ef4444;
        padding: 8px 20px;
        border-radius: 50px;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .remove-btn:hover {
        background: #ef4444;
        color: white;
    }

    .cart-summary {
        background: linear-gradient(135deg, #1a1a1a 0%, #0f0f0f 100%);
        border-radius: 15px;
        padding: 30px;
        margin-top: 30px;
        border: 1px solid rgba(220, 38, 38, 0.3);
    }

    .summary-row {
        display: flex;
        justify-content: space-between;
        padding: 15px 0;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }

    .summary-row:last-child {
        border-bottom: none;
        font-size: 1.5rem;
        font-weight: 900;
        color: #dc2626;
    }

    .checkout-btn {
        width: 100%;
        background: linear-gradient(135deg, #dc2626 0%, #991b1b 100%);
        color: white;
        border: none;
        padding: 18px;
        border-radius: 50px;
        font-size: 1.25rem;
        font-weight: 700;
        cursor: pointer;
        margin-top: 20px;
        transition: all 0.3s ease;
        box-shadow: 0 10px 30px rgba(220, 38, 38, 0.3);
    }

    .checkout-btn:hover {
        transform: translateY(-3px);
        box-shadow: 0 15px 40px rgba(220, 38, 38, 0.5);
    }

    .empty-cart {
        text-align: center;
        padding: 100px 20px;
    }

    .empty-cart i {
        font-size: 5rem;
        color: #4b5563;
        margin-bottom: 20px;
    }

    .continue-shopping {
        background: transparent;
        border: 2px solid #dc2626;
        color: #dc2626;
        padding: 12px 30px;
        border-radius: 50px;
        text-decoration: none;
        display: inline-block;
        margin-top: 20px;
        transition: all 0.3s ease;
    }

    .continue-shopping:hover {
        background: #dc2626;
        color: white;
    }
</style>

<div class="cart-container">
    <div class="cart-header">
        <h1><i class="fas fa-shopping-cart"></i> Your Cart</h1>
        <p style="color: #9ca3af;">Review your items and proceed to checkout</p>
    </div>

    @if (Model != null && Model.Items.Any())
    {
        <div class="cart-items">
            @foreach (var item in Model.Items)
            {
                <div class="cart-item" id="cart-item-@item.ProductId">
                    <img src="@(item.ImageUrl ?? "/images/no-image.png")" alt="@item.ProductName" class="cart-item-image">
                    
                    <div class="cart-item-info">
                        <div class="cart-item-name">@item.ProductName</div>
                        <div class="cart-item-price">€@item.Price.ToString("F2") each</div>
                    </div>
                    
                    <div class="quantity-controls">
                        <button class="qty-btn" onclick="updateQuantity(@item.ProductId, @(item.Quantity - 1))">
                            <i class="fas fa-minus"></i>
                        </button>
                        <span class="qty-display" id="qty-@item.ProductId">@item.Quantity</span>
                        <button class="qty-btn" onclick="updateQuantity(@item.ProductId, @(item.Quantity + 1))">
                            <i class="fas fa-plus"></i>
                        </button>
                    </div>
                    
                    <div style="font-size: 1.5rem; font-weight: 700; color: #dc2626; min-width: 100px; text-align: right;">
                        €@item.Subtotal.ToString("F2")
                    </div>
                    
                    <button class="remove-btn" onclick="removeItem(@item.ProductId)">
                        <i class="fas fa-trash"></i>
                    </button>
                </div>
            }
        </div>

        <div class="cart-summary">
            <div class="summary-row">
                <span>Subtotal (@Model.TotalItems items)</span>
                <span>€@Model.TotalAmount.ToString("F2")</span>
            </div>
            <div class="summary-row">
                <span>Delivery</span>
                <span>€2.99</span>
            </div>
            <div class="summary-row">
                <span>Total</span>
                <span id="total-amount">€@((Model.TotalAmount + 2.99m).ToString("F2"))</span>
            </div>
            
            <button class="checkout-btn" onclick="proceedToCheckout()">
                <i class="fas fa-lock"></i> Proceed to Checkout
            </button>
            
            <a href="/Catalog" class="continue-shopping">
                <i class="fas fa-arrow-left"></i> Continue Shopping
            </a>
        </div>
    }
    else
    {
        <div class="empty-cart">
            <i class="fas fa-shopping-cart"></i>
            <h2 style="color: #9ca3af; margin-bottom: 10px;">Your cart is empty</h2>
            <p style="color: #6b7280;">Add some delicious items to get started!</p>
            <a href="/Catalog" class="continue-shopping">
                <i class="fas fa-utensils"></i> Browse Menu
            </a>
        </div>
    }
</div>

<script>
function updateQuantity(productId, newQuantity) {
    fetch('/Cart/UpdateQuantity', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/x-www-form-urlencoded',
        },
        body: `productId=${productId}&quantity=${newQuantity}`
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            if (newQuantity <= 0) {
                document.getElementById(`cart-item-${productId}`).remove();
                checkEmptyCart();
            } else {
                document.getElementById(`qty-${productId}`).textContent = newQuantity;
                updateTotals(data.total);
            }
        }
    });
}

function removeItem(productId) {
    if (confirm('Remove this item from cart?')) {
        fetch('/Cart/RemoveItem', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/x-www-form-urlencoded',
            },
            body: `productId=${productId}`
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                document.getElementById(`cart-item-${productId}`).remove();
                checkEmptyCart();
            }
        });
    }
}

function updateTotals(subtotal) {
    const delivery = 2.99;
    const total = subtotal + delivery;
    document.getElementById('total-amount').textContent = `€${total.toFixed(2)}`;
    location.reload(); // Reload to update all totals
}

function checkEmptyCart() {
    const items = document.querySelectorAll('.cart-item');
    if (items.length === 0) {
        location.reload();
    }
}

function proceedToCheckout() {
    // For now, just show alert - will implement checkout form next
    const address = prompt('Enter delivery address:');
    if (address) {
        const form = document.createElement('form');
        form.method = 'POST';
        form.action = '/Cart/Checkout';
        
        const addressInput = document.createElement('input');
        addressInput.type = 'hidden';
        addressInput.name = 'deliveryAddress';
        addressInput.value = address;
        
        form.appendChild(addressInput);
        document.body.appendChild(form);
        form.submit();
    }
}
</script>
